<section class = "register">
    <div class="flex flex-col justify-center font-[sans-serif]">
        <div class="max-w-md w-full mx-auto shadow-[0_2px_10px_-2px_rgba(195,169,50,0.5)] p-8 relative mt-12">
          <form class="mt-12">
            <h1 class="text-2xl font-bold text-blue-500 mb-8 text-center"><b><i>Register Now</i></b></h1>
            <div class="space-y-4">
              <input name="name" type="text" class="bg-gray-100 w-full text-sm text-gray-800 px-4 py-4 focus:bg-transparent outline-orange-300 transition-all" placeholder="Enter Name" />
              <input name="username" type="text" class="bg-gray-100 w-full text-sm text-gray-800 px-4 py-4 focus:bg-transparent outline-orange-300 transition-all" placeholder="Enter User Name" />
              <input name="email" type="text" class="bg-gray-100 w-full text-sm text-gray-800 px-4 py-4 focus:bg-transparent outline-orange-300 transition-all" placeholder="Enter email" />
              <input name="mobilenumber" type="number" class="bg-gray-100 w-full text-sm text-gray-800 px-4 py-4 focus:bg-transparent outline-orange-300 transition-all" placeholder="Enter Mobile Number" />
              <input name="address" type="text" class="bg-gray-100 w-full text-sm text-gray-800 px-4 py-4 focus:bg-transparent outline-orange-300 transition-all" placeholder="Enter Address" />
              <input name="password" type="password" class="bg-gray-100 w-full text-sm text-gray-800 px-4 py-4 focus:bg-transparent outline-orange-300 transition-all" placeholder="Enter password" />
              <input name="cpassword" type="password" class="bg-gray-100 w-full text-sm text-gray-800 px-4 py-4 focus:bg-transparent outline-orange-300 transition-all" placeholder="Enter confirm password" />
              <div class="flex items-center">
                <input id="remember-me" name="remember-me" type="checkbox" class="h-4 w-4 shrink-0 border-gray-300 rounded" />
                <label for="remember-me" class="ml-3 block text-sm text-gray-800">
                  I accept the <a href="javascript:void(0);" class="text-orange-500 font-semibold hover:underline ml-1">Terms and Conditions</a>
                </label>
              </div>
            </div>
  
            <div class="mt-8">
              <button type="button" class="w-half py-2 px-4 text-sm tracking-wide font-semibold text-white bg-blue-500 hover:bg-orange-600 focus:outline-none mr-36">
                Create an account
              </button>
              <button type="button" class="w-half py-2 px-4 text-sm tracking-wide font-semibold text-white bg-blue-500 hover:bg-orange-600 focus:outline-none">
                Reset
              </button>
            </div>
            <p class="text-sm mt-8 text-center text-gray-800">Already have an account? <a href="/login" class="text-blue-500 font-semibold hover:underline ml-1">Login here</a></p>
          </form>
        </div>
      </div>
</section>